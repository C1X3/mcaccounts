enum PaymentType {
    STRIPE
    CRYPTO
    PAYPAL
    CASH_APP
    VENMO
}

model Order {
    id String @id @default(cuid())
    productId String
    quantity Int
    totalPrice Float
    paymentType PaymentType
    customerName String
    customerEmail String
    customerPhone String
    customerAddress String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}